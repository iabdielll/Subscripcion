<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".subir">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/borde_lavanda">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBSCRÍBETE A NUESTRA TIENDA "
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/subir"
                android:id="@+id/uploadImg"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/uploadUser"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Usuario"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/uploadName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Ingresa tu Nombre"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/uploadRut"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Rut"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Subscríbete"
                android:textSize="18sp"
                android:id="@+id/saveButton"
                app:cornerRadius="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>